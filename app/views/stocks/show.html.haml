- model_class = Stock
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:symbol) + ':'
  %br
  = @stock.symbol
%p
  %strong= model_class.human_attribute_name(:open) + ':'
  %br
  = @stock.open
%p
  %strong= model_class.human_attribute_name(:high) + ':'
  %br
  = @stock.high
%p
  %strong= model_class.human_attribute_name(:low) + ':'
  %br
  = @stock.low
%p
  %strong= model_class.human_attribute_name(:close) + ':'
  %br
  = @stock.close
%p
  %strong= model_class.human_attribute_name(:volume) + ':'
  %br
  = @stock.volume
%p
  %strong= model_class.human_attribute_name(:stock_data) + ':'
  %br
  = @stock.stock_data

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), stocks_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_stock_path(@stock), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), stock_path(@stock), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
