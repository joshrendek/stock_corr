= form_for @stock, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :symbol, :class => 'control-label'
    .controls
      = f.text_field :symbol, :class => 'text_field'
  .control-group
    = f.label :open, :class => 'control-label'
    .controls
      = f.text_field :open, :class => 'text_field'
  .control-group
    = f.label :high, :class => 'control-label'
    .controls
      = f.text_field :high, :class => 'text_field'
  .control-group
    = f.label :low, :class => 'control-label'
    .controls
      = f.text_field :low, :class => 'text_field'
  .control-group
    = f.label :close, :class => 'control-label'
    .controls
      = f.text_field :close, :class => 'text_field'
  .control-group
    = f.label :volume, :class => 'control-label'
    .controls
      = f.text_field :volume, :class => 'text_field'
  .control-group
    = f.label :stock_data, :class => 'control-label'
    .controls
      = f.text_field :stock_data, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), stocks_path, :class => 'btn'
